<?xml version='1.0' encoding='utf-8'?>
<widget id="site.theaceix.cordovavuetemplate" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>cordova-vue-template</name>
  <description>
    A simple Cordova+Vue+Webpack customizable boilerplate.
  </description>
  <author email="aceixsmartx@gmail.com" href="http://theaceix.site">
    the_aceix
  </author>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <hook src="scripts/vue-build.js" type="before_compile" />
  <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
</widget>
